                            -HTML-

<div class="circle">
  <i class="fas fa-chevron-circle-right fa-2x"></i>
</div>
    
                            -CSS-

body {
  display: flex;
  justify-content: center;
}
.circle {
  width: 100px;
  height: 100px;

  background-color: cornflowerblue;

  border-radius: 50%;

  display: flex;
  justify-content: center;
  align-items: center;
}

@keyframes rightMove {
  0% {
  }
  80% {
    transform: translateX(200px) rotate(0deg);
  }
  100% {
    transform: translateX(200px) rotate(180deg);
  }
}
@keyframes leftMove {
  0% {
    transform: translateX(200px) rotate(180deg);
  }
  80% {
    transform: translateX(0px) rotate(180deg);
  }
  100% {
    transform: translateX(0px) rotate(360deg);
  }
}
.rightMove {
  animation: rightMove 1s ease-in-out;
  animation-fill-mode: forwards;
}
.leftMove {
  animation: leftMove 1s ease-in-out;
  animation-fill-mode: forwards;
}


                            -JS-
                            
                            
const circle = document.querySelector(".circle");
let circleNumber = 0;

circle.addEventListener("click", ifClick);

function ifClick() {
  if (circleNumber === 0) {
    circle.classList.add("rightMove");
    circle.classList.remove("leftMove");
    return circleNumber++;
  } else if (circleNumber === 1) {
    circle.classList.toggle("rightMove");
    circle.classList.toggle("leftMove");
    return --circleNumber;
  }
}
